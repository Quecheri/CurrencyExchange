<h2>Currency Rates</h2>
<h4>Base Currency: PLN = 1.00</h4>
@if (User.Identity.IsAuthenticated)
{
    <div class="mb-3">
        <form asp-action="UpdateRates" method="post">
            <button type="submit" class="btn btn-primary">Update Currency Rates</button>
        </form>
    </div>
}
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Currency Name</th>
                <th scope="col">Code</th>
                <th scope="col">Rate (1 Unit to PLN)</th>
                <th scope="col">Rate (100 Units to PLN)</th>
                <th scope="col">Last Updated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var currency in Model)
            {
                <tr>
                    <td>@currency.Name</td>
                    <td>@currency.Code</td>
                    <td>@string.Format("{0:0.00######}", currency.CurrentRate)</td>
                    <td>@string.Format("{0:0.00######}", currency.CurrentRate * 100)</td>
                    <td>@currency.RateDate.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
