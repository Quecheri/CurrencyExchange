@{
    ViewData["Title"] = "Already Logged In";
}

<h2 class="text-center mb-4">You are already logged in</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <p class="mb-3">You are already logged in as <strong>@User.Identity.Name</strong>.</p>
                <p>What would you like to do?</p>
                <div class="d-grid gap-2">
                    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Go to Home</a>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Logout</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
